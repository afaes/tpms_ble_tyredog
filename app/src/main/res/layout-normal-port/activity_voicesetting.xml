

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/iScVSet"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayoutGroup"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/iTxtSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?attr/colorBackgroundFloating"
                android:gravity="center"
                android:text="@string/setvoice"
                android:textColor="@color/white"
                android:textSize="20sp"/>


            <CheckBox
                android:id="@+id/ichkBoxSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iTxtSet"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:enabled="true"
                android:text="@string/voiceSystem"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/ichkBoxApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutVSystem"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/voiceApp"/>


            <TextView
                android:id="@+id/iTxtCloseitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayoutVApp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_drawable_gary"
                android:enabled="true"
                android:text="@string/closeitem"
                android:textColor="@color/white"
                android:textSize="18sp"/>













            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_drawable_lightgary"
                android:layout_below="@+id/ichkBoxSystem"
                android:layout_marginTop="1dp"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayoutVSystem">

                <TextView
                    android:id="@+id/iTxtValarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iTxtValarmV"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#00000000"
                    android:text="@string/voicealarm"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/iTxtValarmV"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <SeekBar
                    android:id="@+id/iSebValarmV"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iTxtValarm"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:max="15"
                    android:progress="5"
                    android:background="@color/grey"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/iTxtVnotiy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/iSebValarmV"
                    android:layout_toLeftOf="@+id/iTxtVnotiyV"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#00000000"
                    android:text="@string/voicenotiy"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/iTxtVnotiyV"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/iSebValarmV"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <SeekBar
                    android:id="@+id/iSebVnotiyV"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iTxtVnotiy"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:max="15"
                    android:progress="5"
                    android:background="@color/grey"
                    android:visibility="visible"/>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_drawable_lightgary"
                android:layout_below="@+id/ichkBoxApp"
                android:layout_marginTop="1dp"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayoutVApp">

                <TextView
                    android:id="@+id/iTxtValarm1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iTxtValarmV1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#00000000"
                    android:text="@string/voicealarm"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/iTxtValarmV1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <SeekBar
                    android:id="@+id/iSebValarmV1"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iTxtValarm1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:max="15"
                    android:progress="5"
                    android:background="@color/light_grey"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/iTxtVnotiy1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/iSebValarmV1"
                    android:layout_toLeftOf="@+id/iTxtVnotiyV1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#00000000"
                    android:text="@string/voicenotiy"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/iTxtVnotiyV1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/iSebValarmV1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <SeekBar
                    android:id="@+id/iSebVnotiyV1"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iTxtVnotiy1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:max="15"
                    android:progress="5"
                    android:background="@color/light_grey"
                    android:visibility="visible"/>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_drawable_lightgary"
                android:id="@+id/relativeLayoutSystem"
                android:layout_below="@+id/iTxtCloseitem"
                android:layout_marginTop="1dp"
                android:layout_alignParentStart="true">


                <CheckBox
                    android:id="@+id/ichkBoxAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:checked="false"
                    android:text="@string/closealarm"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/ichkBoxNotiy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"

                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/closenotiy"/>

            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>


    <ImageButton
        android:id="@+id/iBtnMode1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:background="@color/open"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/p_mode_status_0"/>

    <ImageButton
        android:id="@+id/iBtnMode2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iBtnMode1"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:background="@color/open"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/p_mode_voice_1"/>

    <ImageButton
        android:id="@+id/iBtnMode3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iBtnMode2"
        android:adjustViewBounds="true"
        android:background="@color/open"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/p_mode_set_0"/>

    <ImageButton
        android:id="@+id/iBtnMode4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iBtnMode3"
        android:adjustViewBounds="true"
        android:background="@color/open"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/p_mode_about_0"/>



    <TextView
        android:id="@+id/iTxtPara"
        android:scrollbars="vertical"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="Load Para Data"/>



</RelativeLayout>